@using onlineexam.Models
@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
}
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-success">Course</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>&nbsp; Add Course???</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-success">
                <th>
                    Course Name
                </th>
                <th>
                    Course Details
                </th>
                <th>
                    Teacher Name
                </th>
                <th>
                    Semester Name
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CourseDetails</td>
                    <td>@item.Teachers.Name</td>
                    <td>@item.Semesters.Name</td>
                    <td>
                        <partial name="_ButtonPartial" model="@item.Id" />
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(document).ready( function (){
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
        $(function(){
            var save = '@TempData["save"]'
            if(save!='') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if(edit!='') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}
