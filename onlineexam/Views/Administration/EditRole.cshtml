@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <form method="post" class="mt-3">
            @*<div class="form-group row">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>*@
            <div class="form-group">
                <label asp-for="RoleName" class="col-form-label">Name</label>
                <div>
                    <input asp-for="RoleName" class="form-control">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <h4 class="text-center">
                        <button type="submit" class="btn btn-success">Update</button>
                        <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
                    </h4>
                </div>
            </div>
            @if (Model.RoleName == "Admin")
            {
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Users in this role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title text-center">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <h4 class="text-center">
                            <a asp-controller="Administration" asp-action="EditUsersInRole"
                               asp-route-roleId="@Model.Id" class="btn btn-primary">
                                Add or remove users from this role
                            </a>
                        </h4>
                    </div>
                </div>
            }
        </form>
    </div>
    <div class="col-sm-3">
    </div>
</div>
