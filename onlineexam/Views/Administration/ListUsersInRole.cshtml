@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "All Users";
}
<a asp-action="Register" asp-controller="Account"
   class="btn btn-primary mb-3" style="width:auto">
    Add new user
</a>
<div class="card-deck">
    @if (Model.Any())
    {


        foreach (var user in Model)
        {
            var photoPath = "~/images/" + (user.Image ?? "2.png");
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                @*<div class="card-header">
                        User Id : @user.Id
                    </div>*@
                <div class="card-body" style="text-align:center">
                    <h5 class="card-title">@user.Name</h5>
                    <h5 class="card-title">@user.Identity</h5>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" height="250" />
                <div class="card-footer">
                    <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                        <a asp-controller="Administration" asp-action="Edituser"
                           asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <span id="confirmDeleteSpan_@user.Id" style="display:none">
                            <span>Are you sure you want to delete?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@user.Id', false)">No</a>
                        </span>
                        <span id="deleteSpan_@user.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@user.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No users created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a user
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="Account" asp-action="Register">
                    Add new user
                </a>
            </div>
        </div>
    }
    @section Scripts {
        <script src="~/js/custom.js"></script>
    }
</div>




