@model EditUserViewModel
@{
    ViewBag.Title = "Edit User";
}
<div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
        <form method="post" class="mt-3">
            @*<div class="form-group">
                    <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                    <div>
                        <input asp-for="Id" disabled class="form-control">
                    </div>
                </div>*@
            <div class="form-group">
                <label asp-for="Email" class="col-form-label">Email</label>
                <div>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="col-form-label"></label>
                <div>
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserIdentityId">Identity</label>
                <select asp-for="UserIdentityId" asp-items="ViewBag.UserIdentityId" class="form-control"></select>
                <span asp-validation-for="UserIdentityId" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListUsers" class="btn btn-primary">Cancel</a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3>User Roles</h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a href="#" style="width:auto" class="btn btn-primary">
                        Manage Roles
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-3">
    </div>
</div>
